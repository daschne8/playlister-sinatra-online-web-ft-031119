<h1>Edit Song</h1>
<form action="/songs/<%=@song.slug%>" method="post">
  <input type="hidden" name="_method" value="patch">
  <label for="name">Song Name:</label>
    <input type="text" name="song[name]" id="name" value="<%=@song.name%>"><br>
  <label for="Artist Name">Artist:</label>
    <input type="text" name="artist[name]" id="Artist Name" value="<%=@song.artist.name%>"><br>
  <label for="">Genres:</label>
  <% Genre.all.each do |genre| %>
    <input type="checkbox" name="genres[]" id="<%=genre.name%>" value="<%=genre.id%>" <%='checked' if @song.genres.include?(genre)%>><%=genre.name%></input>
  <% end %>
  <input type="submit" id="Save">
</form>
